html
    font-family 'Arial', 'sans-serif'
    //background-color #ededed
    background-color white

.wrapper
    width 1100px
    margin 0 auto

header
    background-color #24B9CD
    color white
    padding 10px 0
    //border-bottom 2px solid #1d99aa;
    height 37px

    h1
        margin 0
        text-shadow 0px 0px 10px #999

footer
    background-color #ddd
    padding 10px
    box-sizing border-box
    height 71px

    p
        text-align center
        font-weight bold
        color #555

#global-data
    background-color white
    padding 50px 20px 25px 20px
    //border 1px solid #d9d9d9
    border-radius 5px

    h1
        text-align center

    table
        width 100%
        font-weight bold
        color #666
        font-size 28px

        td
            padding 5px 20px

        td:nth-child(1)
            text-align right

        td:nth-child(3)
            text-align right

