html
    //font-family 'Arial', 'sans-serif'
    //font-family 'Roboto', sans-serif
    font-family: 'Montserrat', sans-serif;

    //background-color #ededed
    background-color white

#bulgaria-map
    path
        fill #ccc
        stroke white
        stroke-width 50px
    path:hover
        cursor pointer
        fill #666

.map-tooltip
    background-color white !important
    //width 100%
    color black !important
    border none
    padding 0
    margin 0

.wrapper
    width 900px
    margin 0 auto

.header-compensator
    height 60px

header
    background-color #00D5BD
    color white
    padding 8px 0
    //border-bottom 2px solid #1d99aa;
    height 60px
    position fixed
    box-sizing border-box
    top 0
    width 100%

    a
        margin 0

        svg
            height 45px

        .app-title
            vertical-align top
            display inline-block
            color white
            font-size 34px

footer
    background-color #ddd
    padding 10px
    box-sizing border-box
    height 71px

    p
        text-align center
        font-weight bold
        color #555

#global-data
    background-color white
    padding 50px 20px 25px 20px
    //border 1px solid #d9d9d9
    border-radius 5px

    h1
        text-align center

table.results-table
    width 100%
    //font-weight bold
    color #666
    font-size 28px

    td
        padding 5px 20px
        box-sizing border-box

    .vote-percent-bar
        height 10px
        //display inline-block
        background-color #eee
        transition width 0.5s ease
        width 0

    .vote-percent-remaining
        display inline-block
        border-top none
        box-sizing border-box
        margin 5px 0
        border-color #ccc

    //row1size = 72px
    //row3size = 180px
    //row4size = 110px

    td:nth-child(1)
        text-align right
        width 72px

    td:nth-child(2)
        width calc(100% - 72px)

    //td:nth-child(3)
    //    text-align right
    //    width row3size

    //td:nth-child(4)
    //    text-align right
    //    width row4size

    .threshold-row
        font-size 12px
        color #777

        hr
            border-color #aaa
            border-top none

table.subdivision-table
    width 100%
    color #666
    font-size 22px

    td
        padding 5px 20px
        box-sizing border-box

    td:nth-child(1)
        text-align right
        width 250px

    td:nth-child(2)
        width calc(100% - 250px)

    a
        color blue

