#bulgaria-map
    path
        fill #ccc
        stroke white
        stroke-width 50px
    path:hover
        cursor pointer
        filter: brightness(0.9)

#map-controls
    margin 20px 0 0 0
    text-align center

    button
        border none
        background none
        padding 10px

        &:hover
            cursor pointer

        &.selected
            color white
            background-color #444
            border-radius 10px

#map-controls-single-party
    text-align center
    height 40px
    margin-bottom -45px
    position relative
    margin-top 5px

    button
        border none
        background none
        padding 5px

        &:hover
            cursor pointer

        &.selected
            color white
            background-color #888
            border-radius 10px

.map-tooltip
    background-color white !important
    opacity: 1 !important;
    color black !important
    border none
    padding 0
    margin 0